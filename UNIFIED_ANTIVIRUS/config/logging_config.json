{
    "logging": {
        "version": 1,
        "disable_existing_loggers": false,
        "formatters": {
            "standard": {
                "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
                "datefmt": "%Y-%m-%d %H:%M:%S"
            },
            "detailed": {
                "format": "%(asctime)s - %(name)s - %(levelname)s - %(filename)s:%(lineno)d - %(message)s",
                "datefmt": "%Y-%m-%d %H:%M:%S"
            },
            "security": {
                "format": "üõ°Ô∏è [%(asctime)s] %(levelname)s - %(name)s - %(message)s",
                "datefmt": "%Y-%m-%d %H:%M:%S"
            }
        },
        "handlers": {
            "console": {
                "class": "logging.StreamHandler",
                "level": "INFO",
                "formatter": "standard",
                "stream": "ext://sys.stdout"
            },
            "file": {
                "class": "logging.handlers.RotatingFileHandler",
                "level": "DEBUG",
                "formatter": "detailed",
                "filename": "logs/unified_antivirus.log",
                "maxBytes": 10485760,
                "backupCount": 5,
                "encoding": "utf8"
            },
            "security_file": {
                "class": "logging.handlers.RotatingFileHandler",
                "level": "WARNING",
                "formatter": "security",
                "filename": "logs/security_events.log",
                "maxBytes": 5242880,
                "backupCount": 10,
                "encoding": "utf8"
            }
        },
        "loggers": {
            "core": {
                "level": "INFO",
                "handlers": ["console", "file"],
                "propagate": false
            },
            "plugins": {
                "level": "INFO",
                "handlers": ["console", "file"],
                "propagate": false
            },
            "security": {
                "level": "WARNING",
                "handlers": ["console", "security_file"],
                "propagate": false
            },
            "ml_detector": {
                "level": "INFO",
                "handlers": ["file"],
                "propagate": false
            },
            "network_detector": {
                "level": "INFO", 
                "handlers": ["file"],
                "propagate": false
            },
            "behavior_detector": {
                "level": "INFO",
                "handlers": ["file"],
                "propagate": false
            }
        },
        "root": {
            "level": "INFO",
            "handlers": ["console", "file"]
        }
    }
}